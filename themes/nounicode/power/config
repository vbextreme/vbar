#$@ current icon
#$0 voltage min
#$1 voltage now
#$2 capacity %
#$3 energy full 
#$4 energy now
#$5 power now
#$6 status
#$7 hours time left
#$8 minutes time left

text.full = "power $2% $5 $6 $7:$8"
text.short = "power $2% $7:$8"
text.short.enable = 1

# blink when capacity < blink.on
blink.on = 10

refresh = 5000

event = "${toggle(power,generic,text.short.enable)}${refresh()}" 

